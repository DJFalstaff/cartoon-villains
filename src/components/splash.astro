---
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
import pirateShipImage from "~/assets/pirate-ship.webp";
import HeroImage from "~/components/hero-image.astro";
const widths = [450, 800];
const logoWidths = [32];
const sizes = "(min-width: 640px) 42vw, 67vw";
---

<section class="relative h-full bg-black">
  <div id="splash-bg-fallback" class="absolute inset-0 opacity-40">
    <HeroImage />
  </div>
  <div class="relative grid h-full place-items-center sm:grid-cols-2">
    <h2
      class="flex flex-col items-center gap-2 self-end sm:gap-4 sm:self-auto sm:justify-self-end"
    >
      <!-- <Icon name="logoship" class="size-24 text-white md:size-32" /> -->
      <!-- <Image src={logoImage} alt="A bird." width="125" height="125"/> -->

      <div class="gradient-text text-center font-extrabold tracking-tighter text-8xl">
         Play
        <br /> Pirate Borg 
        <br /> Online
      </div>
    </h2>
    <div id="pirate-ship" class="w-2/3 max-w-3xl self-start sm:w-10/12 sm:self-auto sm:justify-self-start" title="Click here for more info">
      <a href="#intro">
      <Image
        class="h-full w-full object-cover"
        src={pirateShipImage}
        widths={widths}
        sizes={sizes}
        loading="eager"
        alt="click here for more info"
      />
    </a>
    </div>
  </div>

</section>

<noscript>
  <style>
    #splash-bg-fallback {
      display: block;
    }
  </style>
</noscript>

<style>
  @keyframes float {
    0% {
      transform: translate3d(0, 0, 0);
    }

    100% {
      transform: translate3d(0, 30px, 0);
    }
  }

  #pirate-ship {
    animation: float linear 2.5s infinite alternate;
  }

  @media (prefers-reduced-motion: reduce) {
    #pirate-ship {
      @apply animate-none;
    }

    #splash-bg-fallback {
      @apply block;
    }
  }
</style>
